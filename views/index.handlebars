<div class="jumbotron">
    <h1 id="h1Title">The Burger Bar</h1>
</div>
<div class="container" id="bodyContainer" > 
    <div class="col-md-12 text-center">
    </div>
    <div class="row">
        <!-- Left Columnn -->
        <div class="col-md-4" id="div-left">
            <div class="row">
                <div class="col-md-12 divTitle" id="devaouredTitle">
                    <h3>Available Burger List</h3>
                </div>
            </div>
            {{#each burgerData}}
                {{#unless this.devoured}}
                    <div class="col-md-12 text-center" id="burgerList">
                            {{this.id}}. {{this.burger_name}}
                    
                        <form class="button-size" method="POST" action="/update">
                            <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                            <br>
                            <button type="submit" class="btn btn-default subButn">Eat the Burger</button>
                        </form>
                    </div>
                    <hr>
                    <br>
                {{/unless}}
            {{/each}}
        </div>
        <!-- **************************************************************************** -->
        <!-- Center Column -->
        <div class="col-md-4" id="center-div"> 
            <div class="row">
                <div class="col-md-12 divTitle" id="devaouredTitle">
                    <h3>what would you like to eat</h3>
                </div>
            </div>      
            <form method="POST" action="/create">
                <input type="input" name="burger_name" class="form-control" type="text" value="" id="burger-input">
                <br>
                <div id="submitButtonBox">
                    <button type="submit" class="btn btn-default subButn" id="submit-burger-input">Add the Burger</button>
                </div>
            </form>
            <h3>Please enter the burger you would like to order!</h3>
        </div>
        <!-- **************************************************************************** -->
        <!-- Right Columnn -->
        <div class="col-md-4" id="right-div">
            <div class="row">
                <div class="col-md-12 divTitle" id="devaouredTitle">
                    <h3>You have eaten</h3>
                </div>
            </div>
            {{#each burgerData}}
                {{#if this.devoured}}
                    <div class="col-md-12 text-center" id="burgerList">
                            {{this.id}}. {{this.burger_name}}
                    </div>
                    <hr>
                    <br>
                {{/if}}
            {{/each}}
        </div>
        <!-- **************************************************************************** -->
    </div>
</div>